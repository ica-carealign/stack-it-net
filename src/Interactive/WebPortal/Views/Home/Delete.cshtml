}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<dd>
	<h4>Stack</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.StackModel.Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.StackModel.Name)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.StackModel.CreateTime)
